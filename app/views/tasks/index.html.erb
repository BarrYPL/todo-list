<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>
<%= link_to 'Logout', destroy_user_session_path, method: :delete %>

<% unless @tasks.empty? %>
  <div id="tasks">
    <div class="row">
      <% @tasks.each do |task| %>
        <div class="col">
        <%= render task %>
          <p>
            <%= link_to "Show this task", task %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<%= link_to "New task", new_task_path %>
